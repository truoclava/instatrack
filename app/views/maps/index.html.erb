<h1><%= @current_client.username %></h1>
<h1>First Updated: <%= @current_client.created_at.localtime.to_formatted_s(:long) %></h1>
<h1>Last Updated: <%= @current_client.updated_at.localtime.to_formatted_s(:long) %></h1>

<button><%= link_to 'Update', 'map#update' %></button>

<div style='width: 1500px;'>
  <div id="map" style='width: 1500px; height: 800px;'></div>
</div>


<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @marker_hash.to_json %>, {draggable: true});
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>


